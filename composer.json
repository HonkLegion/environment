{
    "name": "bckp/environment",
    "description": "Simple class for getting environment in proper type with fallback",
    "type": "library",
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "vimeo/psalm": "^4.30",
        "nette/tester": "^2.5"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bckp\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "authors": [
        {
            "name": "Radovan Kepak",
            "email": "radovan@kepakovi.cz"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "tests": "tester tests -s",
        "tests-watch": "tester tests -s -w src",
        "psalm": "psalm"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">= 8.0"
    }
}
